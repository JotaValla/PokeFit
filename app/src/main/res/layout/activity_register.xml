<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    tools:context=".RegisterActivity">

    <!-- Logo/Título PokeFit -->
    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/jersey"
        android:text="PokeFit"
        android:textAlignment="center"
        android:textColor="@color/text_white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Pokeball Icon -->
    <ImageView
        android:id="@+id/iv_pokeball_register"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/pokeball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_title" />

    <!-- Register Form Container -->
    <LinearLayout
        android:id="@+id/ll_register_form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/container_background"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_pokeball_register">

        <!-- Título del formulario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/jersey"
            android:text="Crear Cuenta"
            android:textColor="@color/text_white"
            android:textSize="24sp" />

        <!-- Campo Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Email"
            android:textColor="@color/text_white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"

            android:fontFamily="@font/poppins_medium"
            android:hint="usuario@ejemplo.com"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_white"
            android:textColorHint="#80FFFFFF"
            android:textSize="16sp" />

        <!-- Campo Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Contraseña"
            android:textColor="@color/text_white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"

            android:fontFamily="@font/poppins_medium"
            android:hint="••••••••"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_white"
            android:textColorHint="#80FFFFFF"
            android:textSize="16sp" />

        <!-- Campo Confirmar Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Confirmar Contraseña"
            android:textColor="@color/text_white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"

            android:fontFamily="@font/poppins_medium"
            android:hint="••••••••"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"
            android:textColor="@color/text_white"
            android:textColorHint="#80FFFFFF"
            android:textSize="16sp" />

        <!-- Botón Registrar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#4CAF50"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Crear Cuenta"
                android:textColor="@color/text_white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <!-- Botón Volver al Login -->
        <androidx.cardview.widget.CardView
            android:id="@+id/buttonBackToLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="#6C757D"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Ya tengo cuenta"
                android:textColor="@color/text_white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBarRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>